<h1>Difficulty</h1>

<% if @ratings.any? %>

<ul>
  <% @ratings.each do |rating| %>
  <li><%= link_to rating.difficulty, rating_path(rating) %></li>
  <% end %>
</ul>
<% else %>
<p>There are no ratings yet.</p>
<% end %>

<% if current_user && current_user.admin %>
<p><%= link_to "Create new rating", new_rating_path %></p>
<% end %>
<ul>
  <% @rating.each do |r|%>
  <li><%= link_to r.difficulty, rating_path(r) %></li>
  <% end %>
</ul>
